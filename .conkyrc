alignment top_right
background yes 
border_inner_margin 5
border_outer_margin 1
border_width 0
cpu_avg_samples 4
default_gauge_size 10 10
default_color white 
default_outline_color white
default_shade_color white
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
#xftfont DejaVu Sans Mono:size=12
xftfont Monospace:size=12
gap_x 7
gap_y 30
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class conky-semi
own_window_transparent no
own_window_type normal
stippled_borders 0
